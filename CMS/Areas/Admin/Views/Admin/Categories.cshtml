@model List<Category>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "دسته بندی ها";
}

<div class="wrapper">
    <div id="body" class="active">
        <div class="content">
            <div class="container">
                <div class="page-title">
                    <h3>
                        Categories
                    </h3>
                </div>
                    <a href="/Admin/Admin/AddCategory" class="btn btn-primary">Add Category</a><br /><br />
                <div class="box box-primary">
                    <div class="box-body">
                        <table width="100%" class="table table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td>@category.CategoryId</td>
                                        <td>@category.Name</td>
                                        <td class="text-end">
                                            <a href="/Admin/Admin/EditCategory?Id=@(category.CategoryId)" class="btn btn-outline-info btn-rounded"><i class="fas fa-pen"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>