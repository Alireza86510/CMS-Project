@model User
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "ویرایش کاربر";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">Edit User</div>
        <div class="card-body">
            <h5 class="card-title">Edit Post "@(Model.Name)"</h5>
            <form action="/Admin/Admin/EditUser" method="post" enctype="multipart/form-data" accept-charset="utf-8">
                <div class="mb-3">
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="ImagePath" />
                    <input type="hidden" asp-for="Email" />
                    <input type="hidden" asp-for="ActiveCode" />
                    <input type="hidden" asp-for="Password" />
                    <input type="hidden" asp-for="RegisterDate" />
                    <label for="email" class="form-label">Image</label><br />
                    <img src="~/Uploads/@(Model.ImagePath)" alt="User Picture" class="mw-100" /><br /><br />
                    <input type="file" name="img" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Description</label>
                    <textarea asp-for="Description" rows="10" class="form-control"></textarea>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Is Active?</label>
                    <input asp-for="IsActive" type="checkbox">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Is Admin?</label>
                    <input asp-for="IsAdmin" type="checkbox">
                </div>
                <div class="mb-3">
                    <input type="submit" class="btn btn-primary">
                    <a href="/Admin" class="btn btn-info">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>