@model List<PostReaction>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "ری اکشن ها";
}

<div class="wrapper">
    <div id="body" class="active">
        <div class="content">
            <div class="container">
                <div class="page-title">
                    <h3>
                        Reactions
                    </h3>
                </div>
                <div class="box box-primary">
                    <div class="box-body">
                        <table width="100%" class="table table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Post Id</th>
                                    <th>User Id</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var reaction in Model)
                                {
                                    <tr>
                                        <td>@reaction.ReactionId</td>
                                        <td>@reaction.PostId</td>
                                        <td>@reaction.UserId</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>