@model List<Post>
@{
    ViewData["Title"] = "پست ها";
}

<div class="wrapper">
    <div id="body" class="active">
        <div class="content">
            <div class="container">
                <div class="page-title">
                    <h3>
                        Posts
                    </h3>
                </div>
                <div class="box box-primary">
                    <div class="box-body">
                        <table width="100%" class="table table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Content</th>
                                    <th>Author ID</th>
                                    <th>Likes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var post in Model)
                                {
                                    <tr>
                                        <td>@post.PostId</td>
                                        <td>@post.Title</td>
                                        <td>@post.Content</td>
                                        <td>@post.UserId</td>
                                        <td>@post.PostReactions.Count</td>
                                        <td class="text-end">
                                            <a href="/Admin/Admin/EditPost?postId=@(post.PostId)" class="btn btn-outline-info btn-rounded"><i class="fas fa-pen"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>